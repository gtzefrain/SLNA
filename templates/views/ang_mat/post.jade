doctype html
head 
  title
div(ng-controller="PostCtrl as postctrl" layout="vertical" layout-fill)
  md-content(class="full center post")
    div.content
      //- div.contain
      //-   h2.titulo {{postctrl.post.title}}
      //-   h4.subtitulo {{postctrl.post.content.brief}}
      //-   img(ng-src="{{postctrl.post.image.secure_url}}" class="art-img"  secure=true)
      div(class="md-tile-content img" layout="row" layout-align="space-around center" style="margin:20px" ng-style="{'background-image':'url(' + postctrl.post.image.secure_url + ')'}" )
              div.datos_post(flex-gt-sm="100" flex="100")
                //- div.datos_post(flex-gt-sm="100" flex="100" ng-class="{'izquierda':$even,'derecha':$odd}")  
                div.greybackPost(flex="100")
                  div.greyinnerPost
                    h2.postTitle {{postctrl.post.title}}
      div.subpost
        h4.postSubtitle {{postctrl.post.content.brief}}
        h4.subtitulo.autor Por {{postctrl.post.author.name.first}} {{postctrl.post.author.name.last}}
          | <br> {{postctrl.post.publishedDate | date:'longDate'}}
        //div.fb-share-button(data-layout="button" data-size="small" data-mobile-iframe="true")
      md-divider.topPost(inset)
      div.texto(ng-bind-html="postctrl.post.content.extended  | trustAs")
      //- div(class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-size="large" data-mobile-iframe="true")
      //-   a(target="_blank" ng-href="{{postctrl.post.present_url}}"  class="fb-xfbml-parse-ignore") Share
      //- div(class="twitter-contain")
      //-   a(class="twitter-share-button"
      //-     href="https://twitter.com/share"
      //-     data-size="large"
      //-     data-url="{{self.post.full_url}}") Tweet
      div
        img.logoPost(src="/images/logo.png")
      div.category
        span(ng-repeat="category in postctrl.post.categories") 
          a(href="" ng-click="go('/blog/' + category.key)") 
            div.chip {{category.name}}
    a(href="" ng-click="go('/blog')") 
      div.back 
        p &larr; Regresar al blog	
